    align-items: center;
    justify-content: center;
    margin: 0 0 16px 0;
    .author-tag-left
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      +maxWidth768()
        display: none
      .author-tag:first-child, 
      .author-tag:last-child
        margin-right: -16px
    .author-tag-right
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      +maxWidth768()
        display: none
      .author-tag:first-child, 
      .author-tag:last-child
        margin-left: -16px
