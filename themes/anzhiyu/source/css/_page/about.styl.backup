.author-content-item.clifton-strengths {
  min-height: 200px;
  position: relative;
  overflow: hidden;
  width: 39%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  
  .title2 {
    font-size: 36px;
    font-weight: 700;
    line-height: 1.1;
    color: var(--anzhiyu-main);
    transition: all 0.5s ease-in-out;
  }
  
  // 基因可视化区域
  .gene-visual {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: auto;
    height: auto;
    margin: 0;
    perspective: 500px; // 增强3D透视效果
  }
  
  // DNA双螺旋容器
  .gene-sequence-container {
    position: relative;
    width: 120px;
    height: 200px;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    transform-style: preserve-3d;
    transition: transform 0.8s ease-in-out;
    
    // 左螺旋链
    &::before {
      content: '';
      position: absolute;
      width: 4px;
      height: 100%;
      background: linear-gradient(to bottom, 
        transparent 0%,
        rgba(100, 149, 237, 0.8) 10%,
        rgba(100, 149, 237, 1) 50%,
        rgba(100, 149, 237, 0.8) 90%,
        transparent 100%);
      border-radius: 2px;
      left: 30%;
      transform-origin: center;
      animation: dna-helix-left 8s linear infinite;
      box-shadow: 0 0 8px rgba(100, 149, 237, 0.5);
    }
    
    // 右螺旋链
    &::after {
      content: '';
      position: absolute;
      width: 4px;
      height: 100%;
      background: linear-gradient(to bottom, 
        transparent 0%,
        rgba(255, 99, 132, 0.8) 10%,
        rgba(255, 99, 132, 1) 50%,
        rgba(255, 99, 132, 0.8) 90%,
        transparent 100%);
      border-radius: 2px;
      right: 30%;
      transform-origin: center;
      animation: dna-helix-right 8s linear infinite;
      box-shadow: 0 0 8px rgba(255, 99, 132, 0.5);
    }
    
    &.rotating {
      animation: dna-container-rotation 1.5s ease-in-out;
    }
  }
  
  // 内部基因线条容器
  .gene-stripes-inner {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    transform-style: preserve-3d;
    position: relative;
    z-index: 10;
  }
  
  // 基因线条样式 - 作为DNA碱基对
  .gene-stripes {
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    height: 90%;
    transform-style: preserve-3d;
  }
  
  .gene-stripe {
    width: 50px;
    height: 4px;
    border-radius: 2px;
    cursor: pointer;
    transition: all 0.8s ease-in-out;
    position: relative;
    transform-style: preserve-3d;
    background: transparent;
    
    // 为每个基因碱基对添加不同的旋转角度
    &:nth-child(1) { 
      transform: rotateX(0deg) rotateY(0deg);
      animation-delay: 0s;
    }
    &:nth-child(2) { 
      transform: rotateX(18deg) rotateY(36deg);
      animation-delay: -1s;
    }
    &:nth-child(3) { 
      transform: rotateX(36deg) rotateY(72deg);
      animation-delay: -2s;
    }
    &:nth-child(4) { 
      transform: rotateX(54deg) rotateY(108deg);
      animation-delay: -3s;
    }
    &:nth-child(5) { 
      transform: rotateX(72deg) rotateY(144deg);
      animation-delay: -4s;
    }
    &:nth-child(6) { 
      transform: rotateX(90deg) rotateY(180deg);
      animation-delay: -5s;
    }
    &:nth-child(7) { 
      transform: rotateX(108deg) rotateY(216deg);
      animation-delay: -6s;
    }
    &:nth-child(8) { 
      transform: rotateX(126deg) rotateY(252deg);
      animation-delay: -7s;
    }
    &:nth-child(9) { 
      transform: rotateX(144deg) rotateY(288deg);
      animation-delay: -0.5s;
    }
    &:nth-child(10) { 
      transform: rotateX(162deg) rotateY(324deg);
      animation-delay: -1.5s;
    }
    
    // 添加连接点效果
    &::before,
    &::after {
      content: '';
      position: absolute;
      width: 6px;
      height: 6px;
      border-radius: 50%;
      background: rgba(179, 181, 198, 0.6);
      top: 50%;
      transform: translateY(-50%);
      transition: all 0.6s ease;
    }
    
    &::before {
      left: -3px;
    }
    
    &::after {
      right: -3px;
    }
    
    &.active {
      background: currentColor;
      transform: rotateX(var(--rotation-x, 0deg)) rotateY(var(--rotation-y, 0deg)) scale(1.2);
      filter: drop-shadow(0 0 12px currentColor);
      box-shadow: 0 0 15px currentColor, inset 0 0 5px rgba(255,255,255,0.3);
      animation: gene-glow 2s ease-in-out infinite alternate;
      
      &::before,
      &::after {
        background: currentColor;
        box-shadow: 0 0 8px currentColor;
        transform: translateY(-50%) scale(1.3);
      }
    }
    
    &.inactive {
      background: rgba(179, 181, 198, 0.2);
      opacity: 0.4;
      border: 1px solid rgba(179, 181, 198, 0.3);
      
      &::before,
      &::after {
        background: rgba(179, 181, 198, 0.3);
      }
    }
  }
  
  .fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

// DNA左螺旋链动画 - 蓝色链
@keyframes dna-helix-left {
  0% { 
    transform: rotateY(0deg) rotateZ(0deg) translateX(-10px);
  }
  25% { 
    transform: rotateY(90deg) rotateZ(90deg) translateX(0px);
  }
  50% { 
    transform: rotateY(180deg) rotateZ(180deg) translateX(10px);
  }
  75% { 
    transform: rotateY(270deg) rotateZ(270deg) translateX(0px);
  }
  100% { 
    transform: rotateY(360deg) rotateZ(360deg) translateX(-10px);
  }
}

// DNA右螺旋链动画 - 红色链
@keyframes dna-helix-right {
  0% { 
    transform: rotateY(0deg) rotateZ(0deg) translateX(10px);
  }
  25% { 
    transform: rotateY(-90deg) rotateZ(-90deg) translateX(0px);
  }
  50% { 
    transform: rotateY(-180deg) rotateZ(-180deg) translateX(-10px);
  }
  75% { 
    transform: rotateY(-270deg) rotateZ(-270deg) translateX(0px);
  }
  100% { 
    transform: rotateY(-360deg) rotateZ(-360deg) translateX(10px);
  }
}

// DNA容器旋转动画
@keyframes dna-container-rotation {
  0% { 
    transform: rotateY(0deg) rotateX(0deg);
  }
  33% { 
    transform: rotateY(120deg) rotateX(15deg);
  }
  66% { 
    transform: rotateY(240deg) rotateX(-15deg);
  }
  100% { 
    transform: rotateY(360deg) rotateX(0deg);
  }
}

// 基因发光动画
@keyframes gene-glow {
  0% { 
    filter: drop-shadow(0 0 8px currentColor) brightness(1);
    box-shadow: 0 0 10px currentColor, inset 0 0 3px rgba(255,255,255,0.2);
  }
  100% { 
    filter: drop-shadow(0 0 20px currentColor) brightness(1.3);
    box-shadow: 0 0 25px currentColor, inset 0 0 8px rgba(255,255,255,0.5);
  }
}

// 响应式调整
+maxWidth768() {
  .author-content-item.clifton-strengths {
    width: 100%;
    margin-bottom: 1rem;
    
    .gene-visual {
      perspective: 300px;
    }
    
    .gene-sequence-container {
      width: 80px;
      height: 140px;
      
      &::before,
      &::after {
        width: 3px;
      }
    }
    
    .gene-stripe {
      width: 35px;
      height: 3px;
      
      &::before,
      &::after {
        width: 4px;
        height: 4px;
      }
      
      &.active {
        transform: rotateX(var(--rotation-x, 0deg)) rotateY(var(--rotation-y, 0deg)) scale(1.1);
      }
    }
    
    .gene-stripes {
      gap: 8px;
    }
  }
}

